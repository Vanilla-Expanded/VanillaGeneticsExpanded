<?xml version="1.0" encoding="utf-8" ?>
<Defs>
	<!-- Bear bug Egg -->
	<ThingDef ParentName="EggUnfertBase">
		<defName>GR_BearBugEggUnfertilized</defName>
		<label>bear bug egg (unfert.)</label>
		<description>Unfertilized bear bug egg. It can be eaten raw, but it's much, much better cooked. Actually, it's a beetle egg, it is disgusting either way...</description>
		<graphicData>
			<texPath>Things/Item/Resource/AA_EggBeetle</texPath>
			<color>(99,45,40)</color>
			<drawSize>1.2</drawSize>
		</graphicData>
		<tradeability>Sellable</tradeability>
		<statBases>
			<MarketValue>9.0</MarketValue>
		</statBases>
	</ThingDef>
	<ThingDef ParentName="EggFertBase">
		<defName>GR_BearBugEggFertilized</defName>
		<label>bear bug egg (fert.)</label>
		<description>Fertilized bear bug egg. It can be eaten raw, but it's much, much better cooked. Actually, it's a beetle egg, it is disgusting either way... If all goes well, it should hatch into a bear bug.</description>
		<tradeability>None</tradeability>
		<statBases>
			<MarketValue>9.0</MarketValue>
		</statBases>
		<graphicData>
			<texPath>Things/Item/Resource/AA_EggBeetle</texPath>
			<color>(99,45,40)</color>
			<drawSize>1.2</drawSize>
		</graphicData>
		<comps>
			<li Class="CompProperties_Hatcher">
				<hatcherDaystoHatch>5</hatcherDaystoHatch>
				<hatcherPawn>GR_BearBug</hatcherPawn>
			</li>
		</comps>
		<thingSetMakerTags>
			<li>NotForGuests</li>
		</thingSetMakerTags>
	</ThingDef>
